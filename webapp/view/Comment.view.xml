<mvc:View controllerName="ZWS_COMMENT_DEMO.controller.Comment" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true" xmlns="sap.m">
	<App>
		<pages>
			<Page title="{i18n>title}">
				<content>
					<HBox>
						<Input value="005056B7147D1EDABFB002A4A695D316" placeholder="{i18n>inputPHWorkpack}" id="inputWorkPack" width="100%"/>
						<Input placeholder="{i18n>inputPHCommentTxt}" id="inputCommentTxt" width="100%"/>
						<Button text="{i18n>btnTxtGo}" id="btnGo" press="onPressGo"/>
					</HBox>
					<Button text="{i18n>btnTxtSave}" id="btnSave" press="onPressSave"/>
					<List noDataText="{i18n>listNoData}" id="listComment" inset="true" mode="Delete" delete="onDeleteItem"/>
				</content>
				<footer>
					<Toolbar width="100%" id="toolbarFooter">
						<Input value="" placeholder="{i18n>inputPHAdd}" id="inputAddComment" liveChange="onLiveChangeAddComment"/>
						<Button text="{i18n>btnTxtAdd}" id="buttonAddComment" press="onPressAddComment" enabled="false"/>
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>